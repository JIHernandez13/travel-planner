# Database Configuration
# Generate strong credentials for production
POSTGRES_USER=traveluser
POSTGRES_PASSWORD=change_this_password
POSTGRES_DB=traveldb
DATABASE_URL=postgresql://traveluser:change_this_password@localhost:5432/traveldb

# Security
# Generate a strong secret key for production (use: openssl rand -hex 32)
SECRET_KEY=change_this_to_a_strong_random_secret_key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# Environment
ENVIRONMENT=development
DEBUG=True

# API Configuration
PROJECT_NAME=Travel Planner API
VERSION=1.0.0
API_V1_PREFIX=/api/v1

# CORS - Update with your production frontend URL
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Frontend
VITE_API_URL=http://localhost:8000

# Database Pool Configuration (optional, defaults are provided)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
